<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:background">@color/primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggleDark</item>
    </style>

    <style name="DrawerArrowToggleDark" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
        <item name="spinBars">true</item>
    </style>

    <style name="DrawerArrowToggleLight" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
        <item name="spinBars">true</item>
    </style>

    <style name="WhiteCheckBoxTheme">
        <item name="colorAccent">#fff</item>
    </style>

    <style name="CheckBoxCheckedTheme">
        <item name="colorAccent">#fff</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>